<h2>LIST OF ALL ARTICLES</h2>

<a href= "articles/new">
  <button class="myButton" type="submit">Add an article</button>
</a>
{{#each articles}}
  <div class = "itemList">
  <h3>Title: {{title}}</h3>
    <ul>
      <li>Author: {{author}}</li>
      {{body}}

    </ul>
    <a href= "articles/{{title}}/edit">
    <button class="myButton" type="Edit">Edit Article</button>
    </a><span>
  </div>
{{/each}}

<a href= "/">
  <button class="myButton" type="submit">BACK TO HOME</button>
</a>