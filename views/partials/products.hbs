<h2>LIST OF ALL PRODUCTS</h2>

<a href= "products/new">
  <button class="myButton" type="submit">Add a product</button>
</a>
{{#each products}}
  <div class = "products">
  <h3>Name: {{name}}</h3>
    <ul>
      <li>ID #: {{id}}</li>
      <li>Price:{{price}}</li>
      <li>Inventory: {{inventory}}</li>
    </ul>
    <a href= "products/{{id}}/edit">
    <button class="myButton" type="Edit">Edit Product</button>
    </a><span>
  </div>
{{/each}}