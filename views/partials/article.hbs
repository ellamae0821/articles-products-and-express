<div class = "itemlist">
<h3>Selected Article</h3>
  <div class = "selectedItem">
    <em><b>Article Title: {{title}}</b></em>
      <ul>
        <li><b>Author:</b>{{author}}</li>
        {{body}}
      </ul>
  </div>
  <div class = "modifyHere">
    <form action="/articles/{{title}}?_method=PUT" method="POST" enctype="application/x-www-form-urlencoded">
      <b><h4>Edit Article Here:</h4></b>
      Title: <input type = "text" name="title" value="{{title}}"><br>
      Author: <input type = "text" name="author" value="{{author}}"><br>
      Body: <input type = "text" name="body" value="{{body}}" style = "width:50em; min-height: 150px;"><br>
      <br>
      <input type="submit" value="Submit Edited Details">
    </form>
  </div>
</div>
<br>
<br>
<div class ="btn">
  <form action="/articles/{{title}}?_method=DELETE" method="POST">
    <input type="submit" value = "Delete Article">
  </form>
</div>