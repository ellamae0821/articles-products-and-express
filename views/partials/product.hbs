<div class = "itemlist">
<h3>Selected Item</h3>
  <div class = "selectedItem">
    <em>Product ID: {{id}}</em>
      <ul>
        <li> Name: {{name}}</li>
        <li> Price: {{price}}</li>
        <li> Inventory: {{inventory}}</li>
      </ul>
  </div>
  <div class = "modifyHere">
    <form action="/products/{{id}}?_method=PUT" method="POST" enctype="application/x-www-form-urlencoded">
      <b><h4>Edit Product Details Here:</h4></b>
      Name: <input type = "text" name="name" value="{{name}}"><br>
      Price: <input type = "text" name="price" value="{{price}}"><br>
      Inventory: <input type = "text" name="inventory" value="{{inventory}}"><br>
      <br>
      <input type="submit" value="Submit Edited Details">
    </form>
  </div>
</div>
<br>
<br>
<div class="myButton">
  <form action="/products/{{id}}?_method=DELETE" method="POST">
    <input type="submit" value = "Delete Product">
  </form>
</div>